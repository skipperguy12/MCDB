%h1 Listing settings

%table
  %tr
    %th Name
    %th Values
    %th Defvalue
    %th Isplayersetting
    %th Description
    %th Cluster
    %th
    %th
    %th

  - @settings.each do |setting|
    %tr
      %td= setting.name
      %td= setting.values
      %td= setting.defValue
      %td= setting.isPlayerSetting
      %td= setting.description
      %td= setting.cluster
      %td= link_to 'Show', setting
      %td= link_to 'Edit', edit_setting_path(setting)
      %td= link_to 'Destroy', setting, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Setting', new_setting_path
