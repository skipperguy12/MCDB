= form_for @setting do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :values
    = f.text_field :values
  .field
    = f.label :defValue
    = f.text_field :defValue
  .field
    = f.label :isPlayerSetting
    = f.check_box :isPlayerSetting
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :cluster
    = f.text_field :cluster
  .actions
    = f.submit 'Save'
