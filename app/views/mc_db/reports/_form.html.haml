= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :report
    = f.text_field :report
  .field
    = f.label :reporter
    = f.text_field :reporter
  .field
    = f.label :reported
    = f.text_field :reported
  .field
    = f.label :server
    = f.text_field :server
  .field
    = f.label :cluster
    = f.text_field :cluster
  .field
    = f.label :created
    = f.datetime_select :created
  .actions
    = f.submit 'Save'
