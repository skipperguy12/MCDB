= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :cluster
    = f.text_field :cluster
  .field
    = f.label :priority
    = f.text_field :priority
  .field
    = f.label :members
    = f.text_field :members
  .field
    = f.label :minecraft_permissions
    = f.text_field :minecraft_permissions
  .field
    = f.label :website_permissions
    = f.text_field :website_permissions
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :staff
    = f.check_box :staff
  .field
    = f.label :html_color
    = f.text_field :html_color
  .actions
    = f.submit 'Save'
