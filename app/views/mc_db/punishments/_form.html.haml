= form_for @punishment do |f|
  - if @punishment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@punishment.errors.count, "error")} prohibited this punishment from being saved:"
      %ul
        - @punishment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reason
    = f.text_field :reason
  .field
    = f.label :created
    = f.datetime_select :created
  .field
    = f.label :expires
    = f.datetime_select :expires
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :punisher
    = f.text_field :punisher
  .field
    = f.label :punished
    = f.text_field :punished
  .field
    = f.label :appealable
    = f.check_box :appealable
  .field
    = f.label :cluster
    = f.text_field :cluster
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
