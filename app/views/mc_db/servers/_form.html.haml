= form_for @server do |f|
  - if @server.errors.any?
    #error_explanation
      %h2= "#{pluralize(@server.errors.count, "error")} prohibited this server from being saved:"
      %ul
        - @server.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :port
    = f.number_field :port
  .field
    = f.label :publicIp
    = f.text_field :publicIp
  .field
    = f.label :publicPort
    = f.number_field :publicPort
  .field
    = f.label :cluster
    = f.text_field :cluster
  .field
    = f.label :maxPlayers
    = f.number_field :maxPlayers
  .field
    = f.label :onlinePlayers
    = f.text_field :onlinePlayers
  .field
    = f.label :online
    = f.check_box :online
  .actions
    = f.submit 'Save'
